<div class="container">
  <div class="row h-100 justify-content-center">
    <div class="row h-100 mt-3 mb-2 pb-2 justify-content-center border-bottom">
      <div class="col text-center h3">ユーザー登録</div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="row h-100 justify-content-center">
      <div class="col-8 mt-2 pt-2 pb-4 ps-0 d-flex flex-column align-items-center nomi-event-width">
        
        <%= render "shared/error_messages", resource: f.object %>

        <div class="w-50 mt-2">
          <%= f.label :name, 'ユーザー名' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="w-50 mt-2">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="w-50 mt-2">
          <%= f.label :password, 'パスワード' %>
          <% if @minimum_password_length %>
            <%= "(#{@minimum_password_length}文字以上)" %>
          <% end %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :password_confirmation, 'パスワード (再入力)' %><br />
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      
        <%= f.submit '登録', class: 'w-25 mt-4 btn btn-lg btn-secondary' %>
      </div>
    </div>
  <% end %>
</div>