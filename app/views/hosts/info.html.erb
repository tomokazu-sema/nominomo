<div class="container">
  <div class="row pt-4 mb-4 pb-2 justify-content-center">
    <div class="col"></div>
    <div class="col-6">
      <h1 class="h3 text-center">主催者ページ</h1>
    </div>
    <div class="col"></div>
  </div>

  <div class="mb-5">
    <div class="row mb-2 justify-content-center nomi-subhead">
      <div class="col-8 h-100 ps-0 d-flex align-items-center border-bottom h5 nomi-event-width">
        <div class="ms-0 my-1 nomi-subhead-box"></div>
        <h5 class="ms-2 mb-0">イベントページURL</h5>
      </div>
    </div>

    <div class="row mb-2 pb-2 justify-content-center">
      <div class="col-6 nomi-event-width">
        コピーして参加者に送りましょう
        <p class="nomi-overflow-x">
          <%= "http://#{request.domain}/events/#{@event.uid}" %>
        </p>
      </div>
    </div>

    <div class="row mb-2 pb-2 justify-content-center">
      <div class="col-6 nomi-event-width">
        <%= link_to 'イベントページへ行く', '#', class: 'w-100 btn btn-lg btn-secondary' %>
      </div>
    </div>
  </div>

  <div class="mb-5">
    <div class="row mb-2 justify-content-center nomi-subhead">
      <div class="col-8 h-100 ps-0 d-flex align-items-center border-bottom h5 nomi-event-width">
        <div class="ms-0 my-1 nomi-subhead-box"></div>
        <h5 class="ms-2 mb-0">主催者用イベントページURL</h5>
      </div>
    </div>

    <div class="row mb-2 pb-2 justify-content-center">
      <div class="col-6 nomi-event-width">
        コピーして主催者に送りましょう
        <p class="nomi-overflow-x">
          <%= "http://#{request.domain}/events/#{@event.uid}/hosts/#{@event.host.uid}/info" %>
        </p>
      </div>
    </div>
  </div>
  
  
</div>